<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder_post") %>
  </div>
  <%= f.submit t(".button_submit"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.accept_image %>
  </span>
<% end %>
<%= javascript_pack_tag "check_image" %>
